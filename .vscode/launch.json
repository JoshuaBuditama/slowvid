{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
         {
            "name": "Launch Back-End",
            "request": "launch",
            "runtimeArgs": [
                "run", "dev"
            ],
            "runtimeExecutable": "npm",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "pwa-node",
            "cwd": "${workspaceFolder}/back-end"
        },
		{
            "name": "Launch Bluetooth Server",
            "request": "launch",
            "runtimeArgs": [
                "run", "dev"
            ],
            "runtimeExecutable": "npm",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "pwa-node",
            "cwd": "${workspaceFolder}/bluetooth-server"
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Chrome Front-End",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}/front-end/src",
            "preLaunchTask": "start-front-end"
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Chrome Bluetooth Front-End",
            "url": "http://localhost:8002",
            "webRoot": "${workspaceFolder}/bluetooth-front-end/src",
            "preLaunchTask": "start-bluetooth-front-end"
        }
    ]
}
